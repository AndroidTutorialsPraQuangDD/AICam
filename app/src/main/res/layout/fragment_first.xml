<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/FirstFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.example.aicamtest.FirstFragment">

    <!-- Ô nhập tên món ăn -->
    <EditText
        android:id="@+id/editTextFoodName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nhập tên món ăn"
        android:padding="12dp"
        android:background="@drawable/bg_edittext"
        android:textSize="16sp"
        android:inputType="textCapSentences"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Nút Xem kcal -->
    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Xem kcal"
        android:backgroundTint="#3F51B5"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginTop="12dp"
        android:paddingVertical="12dp"
        app:layout_constraintTop_toBottomOf="@id/editTextFoodName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Nút Chụp ảnh -->
    <Button
        android:id="@+id/buttonCamera"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="📷 Chụp ảnh"
        android:backgroundTint="#FF9800"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        android:paddingVertical="12dp"
        app:layout_constraintTop_toBottomOf="@id/buttonSubmit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Nút Chọn ảnh -->
    <Button
        android:id="@+id/buttonGallery"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="🖼️ Chọn ảnh"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginTop="12dp"
        android:paddingVertical="12dp"
        app:layout_constraintTop_toBottomOf="@id/buttonCamera"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
